            <LinearLayout
                style="@style/component"
                android:theme="@style/theme_info_component">

                <ImageView
                    style="@style/component_ic"
                    android:src="@drawable/ic_wallet_foreground"/>

                <LinearLayout
                    style="@style/component_text">

                    <TextView
                        style="@style/component_text_view"
                        android:text="@string/wallet"/>

                    <TextView
                        android:id="@+id/text_view_wallet"
                        style="@style/component_text_view"
                        android:text="@string/wallet_value"/>

                </LinearLayout>

            </LinearLayout>


            <TextView
                style="@style/header"
                android:text="@string/cursus"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cursus_recycler_view"
                style="@style/recycler_view"/>

            <TextView
                style="@style/header"
                android:text="@string/skills"/>

            <androidx.recyclerview.widget.RecyclerView
